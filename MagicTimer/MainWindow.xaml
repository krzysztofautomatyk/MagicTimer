<Window x:Class="MagicTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicTimer"
        mc:Ignorable="d"
        Title="MagicTimer 1.3"
        MinWidth="160" MinHeight="80"
        Width="520" Height="260"
        Topmost="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Background="#0B0E14"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <SolidColorBrush x:Key="StartBrush" Color="#2EA043"/>
        <SolidColorBrush x:Key="StopBrush" Color="#D73A49"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#58A6FF"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#30363D"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        </Style>

        <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TimerBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                <DiscreteColorKeyFrame KeyTime="0:0:0" Value="#0F172A"/>
                <DiscreteColorKeyFrame KeyTime="0:0:0.5" Value="#7F1D1D"/>
                <DiscreteColorKeyFrame KeyTime="0:0:1" Value="#0F172A"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Główny panel z czasem - skaluje się z oknem -->
        <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border x:Name="TimerBorder" Background="#0F172A" BorderBrush="#223" BorderThickness="1" CornerRadius="8" Padding="12,8">
                <TextBlock x:Name="TimeText"
                           Text="00:00"
                           Foreground="#E6EDF3"
                           FontFamily="Consolas"
                           FontWeight="SemiBold"
                           FontSize="72"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Viewbox>

        <!-- Kontrolki - widoczne tylko gdy okno > 200px wysokości -->
        <ProgressBar Grid.Row="1" x:Name="Progress" Height="12" Minimum="0" Maximum="100" Value="0" Margin="0,4"
                     Foreground="{StaticResource AccentBrush}" Background="#1F2937" BorderBrush="#223" BorderThickness="1"/>

        <StackPanel Grid.Row="2" x:Name="ControlsPanel" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,4">
            <TextBlock Text="Czas:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="#E6EDF3" FontSize="11"/>
            <TextBox x:Name="DurationTextBox" Width="60" Text="05:00" VerticalContentAlignment="Center" Margin="0,0,8,0"
                     Background="#111827" Foreground="#E6EDF3" BorderBrush="#223" FontSize="11"/>
            <Button x:Name="StartStopButton" Content="Start" Width="70" Margin="0,0,6,0" Click="StartStopButton_Click" FontSize="11"/>
            <Button x:Name="ChooseSoundButton" Content="♪" Width="30" Click="ChooseSoundButton_Click" FontSize="11" ToolTip="Wybierz piosenkę" Margin="0,0,2,0"/>
            <Button x:Name="ChooseFontButton" Content="Aa" Width="30" Click="ChooseFontButton_Click" FontSize="11" ToolTip="Wybierz czcionkę" FontWeight="Bold"/>
        </StackPanel>

        <TextBlock Grid.Row="3" x:Name="SoundPathText" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Foreground="#9BA3AF" FontSize="9" Margin="0,2"/>

        <!-- Baner potwierdzenia -->
        <Border x:Name="ConfirmBanner" Grid.Row="0" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#7F1D1D" BorderBrush="#991B1B" BorderThickness="1" CornerRadius="8" Padding="8"
                HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <DockPanel LastChildFill="True">
                <Button DockPanel.Dock="Right" x:Name="ConfirmButton" Content="OK" Width="50" Margin="8,0,0,0"
                        Style="{StaticResource AccentButton}" Click="ConfirmButton_Click" FontSize="11"/>
                <TextBlock DockPanel.Dock="Left" Foreground="White" FontWeight="SemiBold" Text="Czas minął!" VerticalAlignment="Center" FontSize="11"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
